@model WORKFLOW_APP.Models.ADMIN_GROUPS

@{
    ViewBag.Title = "انشاء المجموعات";
}

<h2>انشاء المجموعات </h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        

        <div class="editor-label">
           رقم المجموعه
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GROUP_ID)
            @Html.ValidationMessageFor(model => model.GROUP_ID)
        </div>

        <div class="editor-label">
           اسم المجموعه
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GROUP_NAME)
            @Html.ValidationMessageFor(model => model.GROUP_NAME)
        </div>

       
        <p>
            <input type="submit" value="انشاء مجموعه جديده" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("الرجوع الي شاشه المجموعات", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
