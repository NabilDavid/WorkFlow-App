@{
    ViewBag.Title = "mainlogin";
}


@model IEnumerable<WORKFLOW_APP.Models.ADMIN_USERS>

@{
   
    Layout = null;
}


<html lang="en">
<head>
	<title>Login</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
<!--===============================================================================================-->	
	<link rel="icon" type="image/png" href="../Login/Login_v1/images/icons/favicon.ico"/>
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../Login/Login_v1/vendor/bootstrap/css/bootstrap.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../Login/Login_v1/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../Login/Login_v1/vendor/animate/animate.css">
<!--===============================================================================================-->	
	<link rel="stylesheet" type="text/css" href="../Login/Login_v1/vendor/css-hamburgers/hamburgers.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../Login/Login_v1/vendor/select2/select2.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="../Login/Login_v1/css/util.css">
	<link rel="stylesheet" type="text/css" href="../Login/Login_v1/css/main.css">
<!--===============================================================================================-->
</head>


<body style="background: url('../Images/login2.png') no-repeat;background-size:cover;/*background-position-y: -150px;*//*! background-position-x: -25px; */">
   @* <img src="~/Images/work%20(1).jpg" />*@

	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">

                <div class="row">
                    <div class="col-3">

                        <div class="my-auto login100-pic js-tilt" data-tilt>
                            <img class="" src="~/Images/request-icon-png-6.png" alt="IMG">
                        </div>
                    </div>
                    <div class="col-4"></div>
                    <div class="col-5">

                                       @using (Html.BeginForm("mainlogin", "loginPage", new { @class = "login100-form validate-form py-4" }))
                                       {
				
					                 
                    <div class="row">
                        <div class="col-sm-12 col-12 text-center">
                            <div class="wrap-input100 validate-input">
						        <input class="input100 w-100" type="text" name="userName" required="required" placeholder=" اسم المستخدم">
						        <span class="focus-input100"></span>
						        <span class="symbol-input100">
							        <i class="fa fa-user" aria-hidden="true"></i>
						        </span>
					        </div>
                        </div>
                    </div>
					

					<div class="wrap-input100 validate-input"  data-validate = "Password is required">
						<input class="input100 w-100" type="password" required="required" name="passWord" placeholder=" الرقم السري ">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
					</div>
					
					<div class="container-login100-form-btn my-4">
						<button class="login100-form-btn" type="submit">
							تسجيل الدخول
						</button>
                     
					</div>
                 
				
              }




                    </div>

                </div>



			</div>
		</div>
	</div>
	<script>
	 
	</script>
	

	
<!--===============================================================================================-->	
	<script src="../Login/Login_v1/vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
	<script src="../Login/Login_v1/vendor/bootstrap/js/popper.js"></script>
	<script src="../Login/Login_v1/vendor/bootstrap/js/bootstrap.min.js"></script>
<!--===============================================================================================-->
	<script src="../Login/Login_v1/vendor/select2/select2.min.js"></script>
<!--===============================================================================================-->
	<script src="../Login/Login_v1/vendor/tilt/tilt.jquery.min.js"></script>
	<script >
	    $('.js-tilt').tilt({
	        scale: 1.1
	    })
	</script>
<!--===============================================================================================-->
	<script src="../Login/Login_v1/js/main.js"></script>

</body>
</html>

